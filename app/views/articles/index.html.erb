<h1>Articles</h1>

<table>
    <tr>
        <th>title</th>
        <th>body</th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
            <td>
                <%= link_to "its: #{article.title}", article_path(article) %>
            </td>
            <td> <%= article.body %> </td>
            <td> <%= link_to "edit", edit_article_path(article) %> </td>
            <td> <%= link_to "Destroy", article_path(article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %> </td>
        </tr>
    <% end %>
</table>

<br/>
<%= link_to "make new article", new_article_url %>